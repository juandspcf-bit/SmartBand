                        app:layout_constraintStart_toStartOf="@+id/apneaResultProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/apneaResultMinTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/min_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/apneaResultProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/apneaResultProgressBar"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/apneaResultProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <ProgressBar
                        android:id="@+id/apneaResultProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#96373c"
                        android:max="30"
                        android:progress="0"
                        android:progressBackgroundTint="#D1B2B2"
                        android:progressTint="#FBE9E7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineApneaResultMax"
                        app:layout_constraintStart_toStartOf="@+id/guidelineApneaResultMin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.9" />

                    <TextView
                        android:id="@+id/apneaResultNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="@string/apnea_n_result"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineApneaResultMin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineApneaResultMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.27" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineApneaResultMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.73" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="#faf2f1"
                    android:elevation="5dp">

                    <Button
                        android:id="@+id/iconButton2"
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:insetLeft="6dp"
                        android:insetTop="6dp"
                        android:insetRight="6dp"
                        android:insetBottom="6dp"
                        app:icon="@drawable/ic_baseline_help_outline_24"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:layout_constraintBottom_toBottomOf="@+id/resultBloodOxygenTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/resultBloodOxygenTextView"
                        app:layout_constraintTop_toTopOf="@+id/resultBloodOxygenTextView" />

                    <TextView
                        android:id="@+id/bloodOxygenValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/result_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/resultBloodOxygenTextView"
                        app:layout_constraintStart_toStartOf="@+id/resultBloodOxygenTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/resultBloodOxygenTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/result"
                        android:textColor="#455A64"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guidelineBloodOxygenMax"
                        app:layout_constraintTop_toBottomOf="@+id/bloodOxygenValue" />

                    <TextView
                        android:id="@+id/bloodOxygenMaxTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/blood_oxygen_max_value"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/bloodOxygenMinTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/min_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/bloodOxygenProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <ProgressBar
                        android:id="@+id/bloodOxygenProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#96373c"
                        android:max="99"
                        android:progress="0"
                        android:progressBackgroundTint="#D1B2B2"
                        android:progressTint="#FBE9E7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineBloodOxygenMax"
                        app:layout_constraintStart_toStartOf="@+id/guidelineBloodOxygenMin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.9" />

                    <TextView
                        android:id="@+id/bloodOxygenNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="@string/blood_n_oxygen"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineBloodOxygenMin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineBloodOxygenMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.27" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineBloodOxygenMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.73" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/bloodOxygenValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toEndOf="@+id/bloodOxygenValue"
                        app:layout_constraintTop_toTopOf="@+id/bloodOxygenValue" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="#faf2f1"
                    android:elevation="5dp">

                    <Button
                        android:id="@+id/iconButton3"
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:insetLeft="6dp"
                        android:insetTop="6dp"
                        android:insetRight="6dp"
                        android:insetBottom="6dp"
                        app:icon="@drawable/ic_baseline_help_outline_24"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:layout_constraintBottom_toBottomOf="@+id/resultRespirationRateTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/resultRespirationRateTextView"
                        app:layout_constraintTop_toTopOf="@+id/resultRespirationRateTextView" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="times/\nminute"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/respirationRateValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.2"
                        app:layout_constraintStart_toEndOf="@+id/respirationRateValue"
                        app:layout_constraintTop_toTopOf="@+id/respirationRateValue" />

                    <TextView
                        android:id="@+id/respirationRateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/result_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/respirationRateProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/resultRespirationRateTextView"
                        app:layout_constraintStart_toStartOf="@+id/resultRespirationRateTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/resultRespirationRateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/result"
                        android:textColor="#455A64"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guidelineRespirationRateMax"
                        app:layout_constraintTop_toBottomOf="@+id/respirationRateValue" />

                    <TextView
                        android:id="@+id/respirationRateMaxTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/respiration_rate_max_value"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/respirationRateProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/respirationRateProgressBar"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/respirationRateProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/respirationRateMinTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/min_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/respirationRateProgressBar"
                        app:layout_constraintEnd_toEndOf="@+id/respirationRateProgressBar"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/respirationRateProgressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <ProgressBar
                        android:id="@+id/respirationRateProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#96373c"
                        android:max="40"
                        android:progress="0"
                        android:progressBackgroundTint="#D1B2B2"
                        android:progressTint="#FBE9E7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineRespirationRateMax"
                        app:layout_constraintStart_toStartOf="@+id/guidelineRespirationRateMin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.9" />

                    <TextView
                        android:id="@+id/respirationRateNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="@string/respiration_n_rate"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineRespirationRateMin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineRespirationRateMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.27" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineRespirationRateMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.73" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="#faf2f1"
                    android:elevation="5dp">

                    <Button
                        android:id="@+id/iconButton4"
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:insetLeft="6dp"
                        android:insetTop="6dp"
                        android:insetRight="6dp"
                        android:insetBottom="6dp"
                        app:icon="@drawable/ic_baseline_help_outline_24"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:layout_constraintBottom_toBottomOf="@+id/resultHypoxiaTimeTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/resultHypoxiaTimeTextView"
                        app:layout_constraintTop_toTopOf="@+id/resultHypoxiaTimeTextView" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="times/\nminute"
                        android:textAlignment="center"
                        android:textSize="12sp"
