<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootSop2Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.summaryFragments.SummarySop2Fragment">

        <Button
            android:id="@+id/buttonBackFromSummarySop2Frag"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            app:flow_verticalBias="0.01"
            app:icon="@drawable/ic_baseline_arrow_back_24"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/ap_transparent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/selectDateSop2Button"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:text="@string/dateText"
            app:flow_verticalBias="0.01"
            app:layout_constraintEnd_toStartOf="@+id/Sop2Guideline2"
            app:layout_constraintStart_toStartOf="@+id/Sop2Guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonShareSop2"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/slide_fields_sop2"
            android:minWidth="32dp"
            app:icon="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/fragmentSop2PlotCardViewSummary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toTopOf="@+id/Sop2guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectDateSop2Button">

            <com.androidplot.xy.XYPlot
                android:id="@+id/fragmentSop2PlotSummary"
                style="@style/APDefacto.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="visible"
                app:backgroundColor="@color/white"
                app:domainLineColor="@color/ap_transparent"
                app:domainOriginLineColor="@color/ap_transparent"
                app:graphBackgroundColor="@color/white"
                app:graphMarginLeft="25dp"
                app:graphMarginTop="30dp"
                app:graphWidthMode="fill"
                app:gridBackgroundColor="@color/white"
                app:gridClippingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:legendVisible="false"

                app:lineLabelInsetLeft="4dp"
                app:lineLabelRotationBottom="-45"
                app:lineLabelTextColorLeft="#4B1263"

                app:lineLabels="left|bottom"
                app:rangeLineColor="#646D71"
                app:rangeStep="2dp"
                app:title="Spo2" />


        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Sop2Guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Sop2Guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Sop2guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.35" />


        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/spo2AlertSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:enabled="false"
            android:minHeight="5dp"
            android:text="low blood\n oxygen alert"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/analyticResultTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sop2guideline3" />

        <TextView
            android:id="@+id/analyticResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="@string/analytic_result"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/scrollviewSpo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spo2AlertSwitch" />

        <ScrollView
            android:id="@+id/scrollviewSpo2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/analyticResultTextView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragmentSop2PlotCardViewSummary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/apneaCardView"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="#faf2f1"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/apneaResultValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/result_value_fields_sop2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/apneaResultProgressBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guidelineApneaResultMax"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/apneaResultTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/result"
                        android:textColor="#455A64"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guidelineApneaResultMax"
                        app:layout_constraintTop_toBottomOf="@+id/apneaResultValue" />

                    <Button
                        android:id="@+id/iconButton"
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:insetLeft="6dp"
                        android:insetTop="6dp"
                        android:insetRight="6dp"
                        android:insetBottom="6dp"
                        app:icon="@drawable/ic_baseline_help_outline_24"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:layout_constraintBottom_toBottomOf="@id/apneaResultTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/apneaResultTextView"
                        app:layout_constraintTop_toTopOf="@+id/apneaResultTextView" />

                    <TextView
                        android:id="@+id/apneaResultMaxTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/apnea_frequency_max_value"
                        android:textAlignment="center"
                        android:textColor="@color/textRowFieldsSop2"
