                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guidelineBloodOxygenMax"
                        app:layout_constraintStart_toStartOf="@+id/guidelineBloodOxygenMin"
